/* pages/wdz/wdz.wxss */
@import "../common/common.wxss";

.container {
  width: 100%;
  height: 100%;
  background: #f4f4f4;
  padding: 0;
  margin: 0;
  font-family: 'microsoft yahei', Verdana, Arial, Helvetica, sans-serif;
}

/*头部图片  */

.container .header {
  width: 100%;
  height: 283px;
}

.container .header image {
  width: 100%;
  height: 283px;
}

/*图片上传作者  */

.container .author {
  width: 100%;
  height: 100px;
}

.container .author .author-content {
  width: 96%;
  height: 80px;
  background: #fff;
  margin: 10px auto 0;
  border-radius: 10px;
}

.container .author .author-content .ac-left {
  width: 70%;
  height: 80px;
  float: left;
}

.container .author .author-content .ac-left .acl-pic {
  width: 30%;
  height: 80px;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .author .author-content .ac-left .acl-pic image {
  width: 100%;
  height: 60px;
  border-radius: 50%;
}

.container .author .author-content .ac-left .acl-content {
  width: 70%;
  height: 80px;
  float: right;
  display: flex;
  align-items: center;
}

.container .author .author-content .ac-left .acl-content .acl-info {
  width: 90%;
  height: 46px;
}

.container .author .author-content .ac-left .acl-content .acl-info text {
  width: 100%;
  height: auto;
  display: block;
}

.container .author .author-content .acl-content text:first-child {
  font-size: 14px;
  font-weight: bold;
}

.container .author .author-content .acl-content .acl-weixinhao {
  width: 100%;
  height: 30px;
  line-height: 30px;
}

.container .author .author-content .acl-content .acl-weixinhao text:nth-child(1) {
  width: 48%;
  color: #6a6a6a;
  float: left;
  font-size: 12px;
  font-weight: normal;
}

.container .author .author-content .acl-content .acl-weixinhao text:nth-child(2) {
  width: 18%;
  height: 18px;
  float: left;
  background: #249ce1;
  text-align: center;
  color: #fff;
  font-size: 12px;
  border-radius: 2px;
  margin-top: 6px;
  line-height: 18px;
}

.container .author .author-content .ac-right {
  width: 30%;
  height: 80px;
  float: right;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .author .author-content .ac-right image {
  width: 30%;
  height: 20px;
}

.container .author .author-content .ac-right text {
  width: 70%;
  font-size: 12px;
  color: #999;
  margin-left: 6px;
}

/*介绍  */

.container .info {
  width: 100%;
  height: auto;
  background: #fff;
}

.container .info view {
  margin: 8px auto 0;
}

.container .info .info-common {
  width: 100%;
  height: auto;
  position: relative;
  clear: both;
  margin-bottom: 14px;
  overflow: hidden;
}

.container .info .info-common:nth-child(1) {
  margin-bottom: 14px;
}

.container .info .info-common:nth-child(2) {
}

.container .info .info-common:nth-child(3) {
  /* margin-top: 27px; */
}

.container .info .info-common:nth-child(4) {
}

.container .info .info-common:last-child {
  margin-top: 20px;
}

.container .info .info-common .bg {
  width: 17px;
  height: 36px;
  float: left;
  margin: 0;
  padding: 0;
  position: relative;
}

.container .info .info-common .bg .info-bg {
  width: 4px;
  height: 30px;
  line-height: 30px;
  border-right: solid 4px #ccc;
  position: absolute;
  margin: auto;
  top: 0;
  right: 0;
  bottom: 0;
}

.container .info .info-common .juli {
  width: 4px;
  height: 36px;
  float: left;
  margin: 0;
  padding: 0;
}

.container .info .info-common .it-list {
  width: 90%;
  height: auto;
  float: left;
  margin: 0;
  padding: 0;
}

.container .info .info-common .it-list text {
  width: 100%;
  height: auto;
  display: block;
}

.container .info .info-common .it-list .biaoqian-title {
  font-size: 21px;
  font-weight: bold;
  height: 36px;
  line-height: 36px;
}

.container .info .info-common .it-list .juti-content {
  color: #747474;
  font-size: 13px;
  line-height: 13px;
}

.container .info .info-common .it-list .juti-contentTwo {
  text-decoration: underline;
  color: #000;
  font-size: 13px;
  line-height: 21px;
}

/*第六个  */

.container .info .info-six {
  width: 100%;
  height: auto;
  margin-top: 26px;
}

.container .info .info-six .bg {
  width: 5px;
  height: 26px;
  display: block;
  float: left;
  margin-left: 15px;
}

.container .info .info-six .it-list {
  width: 80%;
  height: auto;
  margin-left: 23px;
}

.container .info .info-six .it-list text {
  width: 100%;
  height: auto;
  display: block;
  font-size: 21px;
  font-weight: bold;
  line-height: 26px;
}

.container .info .info-six .it-list text:nth-child(2) {
  font-size: 12px;
  height: auto;
  line-height: 18px;
  color: #999;
}

.container .info .info-six .it-list .biaoqian {
  width: 100%;
  height: 40px;
}

.container .info .info-six .it-list .biaoqian text {
  width: 20%;
  height: 30px;
  background: #e7e7e7;
  float: left;
  color: #666;
  text-align: center;
  margin-right: 10px;
  font-size: 14px;
  border-radius: 6px;
  line-height: 30px;
}

.container .info .info-six .it-list .biaoqian text:nth-child(1) {
  color: #666;
}

.container .info .info-six .it-list .biaoqian text:nth-child(2) {
  color: #666;
}

.container .info .info-six .it-list .biaoqian image {
  width: 23%;
  height: 30px;
  float: left;
}

.container .info .addContent {
  width: 100%;
  height: 100px;
  margin: 20px auto 0;
  margin-bottom: 30px;
}

.container .info .addContent .bg {
  width: 2%;
  height: 40px;
  display: block;
  float: left;
  margin-left: 20px;
}

.container .info .addContent .addinput {
  width: 80%;
  height: auto;
  margin-left: 46px;
  border-bottom: 2px solid #e0e2e7;
}

.container .info .addContent .addinput input {
  color: #d1d1d1;
  margin-left: 2px;
  margin-bottom: 6px;
  font-size: 12px;
}

/*标签审核  */

.container .bqsh {
  width: 40%;
  height: 50px;
  background: #7a7a7a;
  position: absolute;
  margin: auto;
  top: 0px;
  left: 0px;
  right: 0;
  bottom: 0;
  border-radius: 10px;
  text-align: center;
  line-height: 50px;
}

.container .bqsh text {
  color: #fff;
  font-size: 16px;
}

/*虚背景  */

.xubg {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: rgba(255, 255, 255, 0.8);
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 999;
}

.xubg .xubg-content {
  width: 100%;
  height: 97px;
  position: fixed;
  bottom: 0;
  right: 10px;
}

.xubg .xubg-content .xu-pic {
  width: 18%;
  height: 100px;
  float: right;
  text-align: center;
}

.xubg .xubg-content .xu-pic text {
  font-size: 14px;
  color: #666;
  display: block;
}

.xubg .xubg-content view image {
  width: 56px;
  height: 56px;
}

.xubg .xubg-content .xu-pic:nth-child(1) {
  width: 21%;
  position: relative;
}

.xubg .xubg-content .xu-pic:nth-child(1) image {
  position: absolute;
  top: 0px;
  left: 0;
}

/*增加图片  */
.container .addFun {
  width: 24%;
  height: 100px;
  position: fixed;
  bottom: 0px;
  right: 10px;
}

.container .addFun .add {
  width: 80px;
  height: 80px;
}
