/* pages/shangchuanPic/shangchuanPic.wxss */
@import "../common/common.wxss";
.container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  font-family: 'microsoft yahei', Verdana, Arial, Helvetica, sans-serif;
}

.container .header {
  width: 100%;
  height: 80px;
  background: #3aa7ff;
  position: relative;
}

.container .header .h-pic {
  width: 10%;
  height: 80px;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .header .h-pic image {
  width: 20px;
  height: 20px;
}

.container .header .h-content {
  width: 100%;
  height: 80px;
  line-height: 60px;
}

.container .header .h-content text {
  width: 100%;
  height: 20px;
  display: block;
  text-align: center;
  font-size: 12px;
  color: #fff;
}

.swiper-box .wx-swiper-dot {
  width: 10rpx;
  display: inline-flex;
  height: 10rpx;
  justify-content: space-between;
}

/*微信号  */

.container .weixinhao {
  width: 100%;
  height: 100px;
}

.container .weixinhao .wxContent {
  width: 90%;
  height: 100px;
  margin: 0 auto;
}

.container .weixinhao .wxContent text {
  width: 100%;
  height: auto;
  display: block;
  margin-top: 30px;
  color: #4e5c77;
  font-size: 16px;
}

.container .weixinhao .wxContent .wxText {
  width: 100%;
  height: auto;
  display: block;
  margin-top: 10px;
  border-bottom: 2px solid #e0e2e7;
}

.container .weixinhao .wxContent .wxText input {
  color: #c4c4c4;
  font-size: 14px;
  margin-bottom: 6px;
}

/*上传图片  */

.container .shangchuanPic {
  width: 100%;
  height: auto;
  margin-top: 10px;
}

.container .shangchuanPic .sc-title {
  width: 90%;
  height: auto;
  display: block;
  margin: 0 auto 16px;
  font-size: 16px;
  color: #4e5c77;
}

.container .shuanchuan {
  width: 90%;
  height: auto;
  margin: 0 auto;
}

.container .shuanchuan .sc-left {
  width: 66%;
  height: 150px;
  float: left;
}

.container .shuanchuan .sc-left image {
  width: 100%;
  height: 150px;
}

.container .shuanchuan .sc-right {
  width: 30%;
  height: 150px;
  float: right;
}

.container .shuanchuan .sc-right .scr-top {
  width: 100%;
  height: 48%;
}

.container .shuanchuan .sc-right .scr-top image {
  width: 100%;
  height: 70px;
}

.container .shuanchuan .sc-right .scr-bottom {
  width: 100%;
  height: 48%;
  margin-top: 8px;
}

.container .shuanchuan .sc-right .scr-bottom image {
  width: 100%;
  height: 70px;
}

/*确定发布  */

.container .qdfb {
  width: 100%;
  height: 80px;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .qdfb .btnqdfb {
  width: 60%;
  height: 60px;
  background: #020202;
  border-radius: 30px;
  text-align: center;
  line-height: 60px;
  color: #fff;
}

/*预览图片  */

.container .previewPic {
  width: 100%;
  height: 400px;
}

.container .previewPic .ppContent {
  width: 90%;
  height: 400px;
  margin: 0 auto;
}

.container .previewPic .ppContent image {
  width: 100%;
  height: 200px;
  margin-bottom: 10px;
}
